@model Fahasa.Models.ApplicationUser

@{
    ViewData["Title"] = "Xóa Người Dùng";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h4 class="mb-0 text-gray-800 fw-bold">Xóa Người Dùng</h4>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i> Quay lại
    </a>
</div>

<div class="row">
    <div class="col-lg-6 mx-auto">
        <div class="card shadow mb-4 border-danger">
            <div class="card-header bg-danger text-white py-3">
                <div class="d-flex align-items-center">
                    <i class="bi bi-exclamation-triangle-fill fs-4 me-2"></i>
                    <h5 class="m-0 fw-bold">Xác Nhận Xóa</h5>
                </div>
            </div>
            <div class="card-body p-4 text-center">
                <p class="lead mb-4">Bạn có chắc chắn muốn xóa người dùng này không? Hành động này không thể hoàn tác.</p>
                
                <div class="avatar avatar-xl bg-light rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3">
                    <span class="fs-1 fw-bold text-secondary">@Model.FullName?.Substring(0, 1).ToUpper()</span>
                </div>
                
                <h4 class="fw-bold text-dark">@Model.FullName</h4>
                <p class="text-muted mb-4">@Model.Email</p>
                
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 d-md-block">
                        <a asp-action="Index" class="btn btn-secondary px-4 me-md-2">Hủy bỏ</a>
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-trash-fill me-1"></i> Xóa Người Dùng
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
