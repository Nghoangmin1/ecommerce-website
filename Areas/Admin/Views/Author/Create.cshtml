@model Fahasa.Models.Author

@{
    ViewData["Title"] = "Thêm Tác Giả";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h4 class="mb-0 text-gray-800 fw-bold">Thêm Tác Giả Mới</h4>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i> Quay lại
    </a>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow mb-4">
            <div class="card-body p-4">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                    <div class="row mb-4">
                        
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label fw-bold">Tên Tác Giả <span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control" placeholder="Nhập tên tác giả">
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="BirthYear" class="form-label fw-bold">Năm Sinh</label>
                                    <input asp-for="BirthYear" class="form-control" type="number" placeholder="Ví dụ: 1980">
                                    <span asp-validation-for="BirthYear" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Nationality" class="form-label fw-bold">Quốc Tịch</label>
                                    <input asp-for="Nationality" class="form-control" placeholder="Ví dụ: Việt Nam">
                                    <span asp-validation-for="Nationality" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Biography" class="form-label fw-bold">Tiểu Sử</label>
                        <textarea asp-for="Biography" class="form-control" rows="5" placeholder="Nhập tiểu sử tác giả..."></textarea>
                        <span asp-validation-for="Biography" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-light">Hủy bỏ</a>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-save me-1"></i> Lưu Tác Giả
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>