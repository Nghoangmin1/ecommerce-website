@model Fahasa.Models.Publisher

@{
    ViewData["Title"] = "Cập Nhật Nhà Xuất Bản";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h4 class="mb-0 text-gray-800 fw-bold">Cập Nhật Nhà Xuất Bản</h4>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i> Quay lại
    </a>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow mb-4">
            <div class="card-body p-4">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>
                    <input type="hidden" asp-for="Id" />


                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                                    <label asp-for="Phone" class="form-label fw-bold">Điện Thoại</label>
                                    <input asp-for="Phone" class="form-control" type="tel" placeholder="Số điện thoại">
                                    <span asp-validation-for="Phone" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Email" class="form-label fw-bold">Email</label>
                                    <input asp-for="Email" class="form-control" type="email" placeholder="Email liên hệ">
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                            </div>

                             <div class="mb-3">
                                <label asp-for="Address" class="form-label fw-bold">Địa Chỉ</label>
                                <input asp-for="Address" class="form-control" placeholder="Địa chỉ trụ sở">
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>


                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-light">Hủy bỏ</a>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-save me-1"></i> Lưu Thay Đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>