@using Fahasa.ViewModels;
@model LoginViewModel;

@{
    Layout = null;
    ViewData["Title"] = "Admin Login";
}

<!DOCTYPE html>
<html lang="en-US" dir="ltr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Login - Fahasa</title>

    <!-- Stylesheets -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700;800;900&amp;display=swap" rel="stylesheet">
    <link href="~/admin/css/simplebar.min.css" rel="stylesheet">
    <link href="~/admin/css/theme.min.css" type="text/css" rel="stylesheet" id="style-default">
    <link href="~/admin/css/user.min.css" type="text/css" rel="stylesheet" id="user-style-default">
</head>

<body>
    <main class="main" id="top">
        <div class="container-fluid px-0" data-layout="container">
            <div class="container">
                <div class="row flex-center min-vh-100 py-5">
                    <div class="col-sm-10 col-md-8 col-lg-5 col-xl-5 col-xxl-3">
                        <div class="text-center mb-7">
                            <h3 class="text-body-highlight">Admin Sign In</h3>
                            <p class="text-body-tertiary">Access to dashboard</p>
                        </div>
                        
                         <form asp-action="Login" method="post" asp-area="Admin" asp-controller="Account" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                            @Html.AntiForgeryToken()
                             
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="mb-3 text-start">
                                <label class="form-label" asp-for="Email">Email address</label>
                                <div class="form-icon-container">
                                    <input class="form-control form-icon-input" asp-for="Email" type="email" placeholder="name@example.com" />
                                    <span class="fas fa-user text-body fs-9 form-icon"></span>
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3 text-start">
                                <label class="form-label" asp-for="Password">Password</label>
                                <div class="form-icon-container">
                                    <input class="form-control form-icon-input" asp-for="Password" type="password" placeholder="Password" />
                                    <span class="fas fa-key text-body fs-9 form-icon"></span>
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="row flex-between-center mb-7">
                                <div class="col-auto">
                                    <div class="form-check mb-0">
                                        <input class="form-check-input" asp-for="RememberMe" type="checkbox" />
                                        <label class="form-check-label mb-0" asp-for="RememberMe">Remember me</label>
                                    </div>
                                </div>
                            </div>

                            <button class="btn btn-primary w-100 mb-3" type="submit">Sign In</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
    
    <!-- Scripts -->
    <script src="~/admin/js/simplebar.min.js"></script>
    <script src="~/admin/js/config.js"></script>
    <script src="~/admin/js/phoenix.js"></script>
</body>
</html>
