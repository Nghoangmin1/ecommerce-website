@model Fahasa.Models.Category

@{
    ViewData["Title"] = "Xóa Danh Mục";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h4 class="mb-0 text-gray-800 fw-bold">Xóa Danh Mục</h4>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i> Quay lại
    </a>
</div>

<div class="row">
    <div class="col-lg-6 mx-auto">
        <div class="card shadow mb-4 border-danger">
            <div class="card-header bg-danger text-white py-3">
                <div class="d-flex align-items-center">
                    <i class="bi bi-exclamation-triangle-fill fs-4 me-2"></i>
                    <h5 class="m-0 fw-bold">Xác Nhận Xóa</h5>
                </div>
            </div>
            <div class="card-body p-4 text-center">
                <p class="lead mb-4">Bạn có chắc chắn muốn xóa danh mục này không? Hành động này không thể hoàn tác.</p>
                
                <div class="col-md-12 mb-4">
                    <h4 class="fw-bold text-dark">@Model.Name</h4>
                    <p class="text-muted">ID: @Model.Id</p>
                </div>
                 @if (Model.IsActive == true)
                {
                     <span class="badge bg-success mb-3">Đang Hoạt động</span>
                }
                else
                {
                     <span class="badge bg-danger mb-3">Ngưng Hoạt động</span>
                }

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 d-md-block">
                        <a asp-action="Index" class="btn btn-secondary px-4 me-md-2">Hủy bỏ</a>
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-trash-fill me-1"></i> Xóa Danh Mục
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
