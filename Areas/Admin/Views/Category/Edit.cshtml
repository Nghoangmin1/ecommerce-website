@model Fahasa.Models.Category

@{
    ViewData["Title"] = "Cập Nhật Danh Mục";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h4 class="mb-0 text-gray-800 fw-bold">Cập Nhật Danh Mục</h4>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i> Quay lại
    </a>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow mb-4">
            <div class="card-body p-4">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>
                    <input type="hidden" asp-for="Id" />


                    <div class="row mb-4">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label fw-bold">Tên Danh Mục <span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control" placeholder="Nhập tên danh mục">
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" asp-for="IsActive">
                                    <label class="form-check-label fw-bold" asp-for="IsActive">Kích hoạt danh mục này</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label fw-bold">Mô Tả</label>
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-light">Hủy bỏ</a>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-save me-1"></i> Lưu Thay Đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>