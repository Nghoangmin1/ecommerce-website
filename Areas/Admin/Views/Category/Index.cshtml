@model IEnumerable<Fahasa.Models.Category>

@{
    ViewData["Title"] = "Quản Lý Danh Mục";
}

<!-- Page Header -->
<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h4 class="mb-0 text-gray-800 fw-bold">Danh Mục Sản Phẩm</h4>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-lg me-1"></i> Thêm danh mục
    </a>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Main Card -->
<div class="card shadow mb-4">
    <div class="card-header py-3 bg-transparent border-bottom">
        <form class="d-flex align-items-center gap-2 flex-wrap">
            <div class="search-box position-relative" style="width: 300px;">
                <input class="form-control ps-5" type="search" name="search" placeholder="Tìm kiếm danh mục..." value="@ViewBag.search">
                <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
            </div>
            
            <select class="form-select w-auto" name="isActive" onchange="this.form.submit()">
                <option value="0" selected="@(ViewBag.IsActive == 0)">Tất cả trạng thái</option>
                <option value="1" selected="@(ViewBag.IsActive == 1)">Hoạt động</option>
                <option value="2" selected="@(ViewBag.IsActive == 2)">Không hoạt động</option>
            </select>
            
             @if (!string.IsNullOrEmpty(ViewBag.search) || ViewBag.IsActive != 0)
            {
                <a href="@Url.Action("Index", "Category", new { isActive = 0, search = "" })" class="btn btn-outline-secondary">Xóa lọc</a>
            }
        </form>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Tên Danh Mục</th>
                        <th>Trạng Thái</th>
                        <th>Ngày Tạo</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <h6 class="mb-0 fw-bold text-dark">@item.Name</h6>
                                </div>
                            </td>
                            <td>
                                @if (item.IsActive == true)
                                {
                                    <span class="badge badge-phoenix badge-phoenix-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge badge-phoenix badge-phoenix-warning">Ngưng hoạt động</span>
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Sửa">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Chi tiết">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Xóa">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
     @if (ViewBag.TotalPages > 1)
    {
        <div class="card-footer bg-transparent border-top py-3">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mb-0">
                    <li class="page-item @(ViewBag.CurrentPage <= 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, search = ViewBag.search, isActive = ViewBag.IsActive })">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = i, search = ViewBag.search, isActive = ViewBag.IsActive })">@i</a>
                        </li>
                    }
                    <li class="page-item @(ViewBag.CurrentPage >= ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, search = ViewBag.search, isActive = ViewBag.IsActive })">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>