@model Fahasa.Models.Book

@{
    ViewData["Title"] = "Xóa Sách";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h4 class="mb-0 text-gray-800 fw-bold">Xóa Sách</h4>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i> Quay lại
    </a>
</div>

<div class="row">
    <div class="col-lg-6 mx-auto">
        <div class="card shadow mb-4 border-danger">
            <div class="card-header bg-danger text-white py-3">
                <div class="d-flex align-items-center">
                    <i class="bi bi-exclamation-triangle-fill fs-4 me-2"></i>
                    <h5 class="m-0 fw-bold">Xác Nhận Xóa</h5>
                </div>
            </div>
            <div class="card-body p-4 text-center">
                <p class="lead mb-4">Bạn có chắc chắn muốn xóa cuốn sách này không? Hành động này không thể hoàn tác.</p>
                
                 @{
                    var imgSrc = !string.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl : "/images/default-placeholder.png";
                }
                <img src="@imgSrc" class="rounded shadow border mb-3" 
                        style="width: 100px; height: auto;" alt="@Model.Name">
                
                <h5 class="fw-bold text-dark text-wrap mx-auto" style="max-width: 300px;">@Model.Name</h5>
                <p class="text-muted mb-4">ID: @Model.Id</p>
                
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 d-md-block">
                        <a asp-action="Index" class="btn btn-secondary px-4 me-md-2">Hủy bỏ</a>
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-trash-fill me-1"></i> Xóa Sách
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
