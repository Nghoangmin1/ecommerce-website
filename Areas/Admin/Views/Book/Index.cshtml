@model IEnumerable<Fahasa.Models.Book>

@{
    ViewData["Title"] = "Quản Lý Sách";
}

<!-- Page Header -->
<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h4 class="mb-0 text-gray-800 fw-bold">Danh Sách Sách</h4>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-lg me-1"></i> Thêm sách
    </a>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Main Card -->
<div class="card shadow mb-4">
    <div class="card-header py-3 bg-transparent border-bottom">
        <form class="row g-3 align-items-center">
            <div class="col-auto">
                 <div class="search-box position-relative" style="width: 250px;">
                    <input class="form-control ps-5" type="search" name="search" placeholder="Tìm kiếm sách..." value="@ViewBag.search">
                    <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                </div>
            </div>
            
            <div class="col-auto">
                <select class="form-select" name="categoryId" onchange="this.form.submit()">
                    <option value="0" selected="@(ViewBag.categoryId == 0)">Tất cả danh mục</option>
                     @if (ViewBag.Categories != null)
                    {
                        foreach (var item in ViewBag.Categories as SelectList)
                        {
                            <option value="@item.Value" selected="@(item.Value == ViewBag.categoryId.ToString())">@item.Text</option>
                        }
                    }
                </select>
            </div>
            
             <div class="col-auto">
                <select class="form-select" name="isActive" onchange="this.form.submit()">
                    <option value="0" selected="@(ViewBag.IsActive == 0)">Tất cả trạng thái</option>
                    <option value="1" selected="@(ViewBag.IsActive == 1)">Hoạt động</option>
                    <option value="2" selected="@(ViewBag.IsActive == 2)">Không hoạt động</option>
                </select>
            </div>
            
            <div class="col-auto d-flex gap-2">
                 <input type="number" name="priceFrom" class="form-control" placeholder="Giá từ" value="@ViewBag.priceFrom" style="width: 100px;">
                 <input type="number" name="priceTo" class="form-control" placeholder="Đến" value="@ViewBag.priceTo" style="width: 100px;">
            </div>

            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Lọc</button>
                <a href="@Url.Action("Index", "Book")" class="btn btn-outline-secondary">Xóa</a>
            </div>
        </form>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Tên Sách</th>
                        <th>Danh Mục</th>
                        <th>Tác Giả</th>
                        <th>Giá Bán</th>
                        <th>Trạng Thái</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                         var isDefault = item.ImageUrl == "/images/books/default.png" || string.IsNullOrEmpty(item.ImageUrl);
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="avatar avatar-lg me-3">
                                        @if (isDefault)
                                        {
                                            <div class="avatar-name rounded bg-light text-secondary fw-bold fs-4 d-flex align-items-center justify-content-center" style="width: 48px; height: 64px;">
                                                <i class="bi bi-book"></i>
                                            </div>
                                        }
                                        else
                                        {
                                            <img src="@item.ImageUrl" alt="@item.Name" class="rounded shadow-sm" style="width: 48px; height: 64px; object-fit: cover;">
                                        }
                                    </div>
                                    <div>
                                        <h6 class="mb-0 fw-bold text-dark text-wrap" style="max-width: 250px;">@item.Name</h6>
                                        <small class="text-muted">ID: @item.Id</small>
                                    </div>
                                </div>
                            </td>
                            <td><span class="badge bg-light text-dark border">@item.Category?.Name</span></td>
                            <td>@item.Author?.Name</td>
                            <td>
                                @if (item.DiscountPercent > 0)
                                {
                                    <div class="d-flex flex-column">
                                        <span class="text-decoration-line-through text-muted small">@item.Price.ToString("N0") đ</span>
                                        <span class="fw-bold text-danger">
                                            @(Convert.ToInt32(item.Price * (1 - item.DiscountPercent / 100m)).ToString("N0")) đ
                                        </span>
                                        <span class="badge bg-danger-subtle text-danger rounded-pill mt-1 w-auto">-@item.DiscountPercent%</span>
                                    </div>
                                }
                                else
                                {
                                    <span class="fw-bold">@item.Price.ToString("N0") đ</span>
                                }
                            </td>
                            <td>
                                @if (item.IsActive == true)
                                {
                                    <span class="badge badge-phoenix badge-phoenix-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge badge-phoenix badge-phoenix-warning">Ngưng hoạt động</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Sửa">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Chi tiết">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Xóa">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
     @if (ViewBag.TotalPages > 1)
    {
        <div class="card-footer bg-transparent border-top py-3">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mb-0">
                    <li class="page-item @(ViewBag.CurrentPage <= 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, search = ViewBag.search, isActive = ViewBag.IsActive, categoryId = ViewBag.categoryId, priceFrom = ViewBag.priceFrom, priceTo = ViewBag.priceTo })">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = i, search = ViewBag.search, isActive = ViewBag.IsActive, categoryId = ViewBag.categoryId, priceFrom = ViewBag.priceFrom, priceTo = ViewBag.priceTo })">@i</a>
                        </li>
                    }
                    <li class="page-item @(ViewBag.CurrentPage >= ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, search = ViewBag.search, isActive = ViewBag.IsActive, categoryId = ViewBag.categoryId, priceFrom = ViewBag.priceFrom, priceTo = ViewBag.priceTo })">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>
