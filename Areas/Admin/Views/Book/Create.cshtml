@model Fahasa.Models.Book

@{
    ViewData["Title"] = "Thêm Sách";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h4 class="mb-0 text-gray-800 fw-bold">Thêm Sách Mới</h4>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i> Quay lại
    </a>
</div>

<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-transparent border-bottom">
                    <h6 class="m-0 font-weight-bold text-primary">Thông Tin Chung</h6>
                </div>
                <div class="card-body p-4">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Tên Sách <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control" placeholder="Nhập tên sách">
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Price" class="form-label fw-bold">Giá Bán (VNĐ) <span class="text-danger">*</span></label>
                            <input asp-for="Price" class="form-control" type="number" placeholder="0">
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                             <label asp-for="DiscountPercent" class="form-label fw-bold">Giảm Giá (%)</label>
                            <input asp-for="DiscountPercent" class="form-control" type="number" min="0" max="100" placeholder="0">
                            <span asp-validation-for="DiscountPercent" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="StockQuantity" class="form-label fw-bold">Số Lượng Tồn Kho</label>
                            <input asp-for="StockQuantity" class="form-control" type="number" placeholder="0">
                            <span asp-validation-for="StockQuantity" class="text-danger small"></span>
                        </div>
                         <div class="col-md-6 mb-3">
                            <label asp-for="PublicationYear" class="form-label fw-bold">Năm Xuất Bản</label>
                            <input asp-for="PublicationYear" class="form-control" type="number" placeholder="2024">
                            <span asp-validation-for="PublicationYear" class="text-danger small"></span>
                        </div>
                    </div>
                     
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Pages" class="form-label fw-bold">Số Trang</label>
                            <input asp-for="Pages" class="form-control" type="number">
                            <span asp-validation-for="Pages" class="text-danger small"></span>
                        </div>
                         <div class="col-md-4 mb-3">
                            <label asp-for="Weight" class="form-label fw-bold">Khối Lượng (gram)</label>
                            <input asp-for="Weight" class="form-control" type="number">
                            <span asp-validation-for="Weight" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                             <label asp-for="CoverType" class="form-label fw-bold">Loại Bìa</label>
                             <select asp-for="CoverType" class="form-select">
                                 <option value="0">Bìa Mềm</option>
                                 <option value="1">Bìa Cứng</option>
                             </select>
                            <span asp-validation-for="CoverType" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Width" class="form-label fw-bold">Chiều Rộng (cm)</label>
                            <input asp-for="Width" class="form-control" type="number" step="0.1">
                        </div>
                         <div class="col-md-4 mb-3">
                            <label asp-for="Height" class="form-label fw-bold">Chiều Cao (cm)</label>
                            <input asp-for="Height" class="form-control" type="number" step="0.1">
                        </div>
                         <div class="col-md-4 mb-3">
                            <label asp-for="Depth" class="form-label fw-bold">Độ Dày (cm)</label>
                            <input asp-for="Depth" class="form-control" type="number" step="0.1">
                        </div>
                    </div>


                     <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-bold">Mô Tả Sản Phẩm</label>
                        <textarea asp-for="Description" class="form-control" rows="5" placeholder="Chi tiết về sách..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-transparent border-bottom">
                    <h6 class="m-0 font-weight-bold text-primary">Phân Loại & Ảnh</h6>
                </div>
                <div class="card-body p-4">
                    <div class="mb-3">
                         <label class="form-label fw-bold d-block mb-2">Ảnh Bìa Sách</label>
                         <div class="text-center">
                            <img id="previewImage" src="/images/default-placeholder.png" 
                                 class="rounded shadow-sm object-fit-cover border mb-3" 
                                 style="width: 100%; height: auto; aspect-ratio: 2/3; max-width: 180px;" alt="Book Cover">
                            <div>
                                <label for="uploadImage" class="btn btn-sm btn-primary">
                                    <i class="bi bi-upload me-1"></i> Tải ảnh lên
                                </label>
                                <input type="file" id="uploadImage" name="image" class="d-none" accept="image/*" onchange="previewFile()">
                            </div>
                         </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label fw-bold">Danh Mục</label>
                        <select asp-for="CategoryId" class ="form-select" asp-items="ViewBag.Categories">
                             <option value="">-- Chọn Danh Mục --</option>
                        </select>
                         <span asp-validation-for="CategoryId" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AuthorId" class="form-label fw-bold">Tác Giả</label>
                        <select asp-for="AuthorId" class ="form-select" asp-items="ViewBag.Authors">
                             <option value="">-- Chọn Tác Giả --</option>
                        </select>
                        <span asp-validation-for="AuthorId" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PublisherId" class="form-label fw-bold">Nhà Xuất Bản</label>
                        <select asp-for="PublisherId" class ="form-select" asp-items="ViewBag.Publishers">
                             <option value="">-- Chọn NXB --</option>
                        </select>
                        <span asp-validation-for="PublisherId" class="text-danger small"></span>
                    </div>

                     <div class="mb-3">
                        <label asp-for="Language" class="form-label fw-bold">Ngôn Ngữ</label>
                        <select asp-for="Language" class ="form-select">
                             <option value="0">Tiếng Việt</option>
                             <option value="1">Tiếng Anh</option>
                        </select>
                        <span asp-validation-for="Language" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-3 mt-4">
                        <div class="form-check form-switch p-0 d-flex justify-content-between align-items-center border px-3 py-2 rounded">
                            <label class="form-check-label fw-bold m-0" for="IsActive">Đang kinh doanh</label>
                            <input class="form-check-input m-0" type="checkbox" role="switch" id="IsActive" name="IsActive" value="true" checked>
                        </div>
                    </div>

                    <hr />
                    <div class="d-grid mt-3">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save me-1"></i> Hoàn Tất
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function previewFile() {
            var preview = document.querySelector('#previewImage');
            var file = document.querySelector('#uploadImage').files[0];
            var reader = new FileReader();

            reader.onloadend = function () {
                preview.src = reader.result;
            }

            if (file) {
                reader.readAsDataURL(file);
            } else {
                 preview.src = "/images/default-placeholder.png";
            }
        }
    </script>
}