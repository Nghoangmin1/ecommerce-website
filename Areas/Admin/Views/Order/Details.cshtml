@model Fahasa.Models.Order

@{
    ViewData["Title"] = "Chi Tiết Đơn Hàng";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h4 class="mb-0 text-gray-800 fw-bold">Chi Tiết Đơn Hàng #@Model.OrderNumber</h4>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i> Quay lại
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-transparent border-bottom d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">Sản Phẩm Đã Mua</h6>
                <span class="text-muted small">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4">Sản Phẩm</th>
                                <th class="text-center">Số Lượng</th>
                                <th class="text-end pe-4">Thành Tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <h6 class="mb-0 text-dark fw-semibold">@item.ProductName</h6>
                                        <small class="text-muted">Đơn giá: @item.UnitPrice.ToString("N0") ₫</small>
                                    </td>
                                    <td class="text-center">x @item.Quantity</td>
                                    <td class="text-end pe-4 fw-bold">@item.TotalPrice.ToString("N0") ₫</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="bg-light">
                            <tr>
                                <td colspan="2" class="text-end fw-bold pt-3">Tổng Tiền:</td>
                                <td class="text-end fw-bold text-primary fs-5 pe-4 pt-3">@Model.TotalAmount.ToString("N0") ₫</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
        
        <!-- Action Buttons for Status Update -->
        <div class="card shadow mb-4">
            <div class="card-body d-flex justify-content-between align-items-center">
                <span class="text-muted fw-bold">Cập nhật trạng thái đơn hàng:</span>
                <form asp-action="UpdateStatus" method="post" class="d-flex gap-2">
                    <input type="hidden" name="id" value="@Model.Id" />
                    
                    @if (Model.Status == Fahasa.Models.OrderStatus.Pending)
                    {
                        <button type="submit" name="status" value="Processing" class="btn btn-info text-white">
                            <i class="bi bi-arrow-right-circle me-1"></i> Xử Lý
                        </button>
                        <button type="submit" name="status" value="Cancelled" class="btn btn-danger">
                            <i class="bi bi-x-circle me-1"></i> Hủy Đơn
                        </button>
                    }
                    else if (Model.Status == Fahasa.Models.OrderStatus.Processing)
                    {
                        <button type="submit" name="status" value="Shipping" class="btn btn-primary">
                            <i class="bi bi-truck me-1"></i> Giao Hàng
                        </button>
                        <button type="submit" name="status" value="Cancelled" class="btn btn-danger">
                             <i class="bi bi-x-circle me-1"></i> Hủy Đơn
                        </button>
                    }
                    else if (Model.Status == Fahasa.Models.OrderStatus.Shipping)
                    {
                        <button type="submit" name="status" value="Delivered" class="btn btn-success">
                            <i class="bi bi-check-circle me-1"></i> Hoàn Thành
                        </button>
                         <button type="submit" name="status" value="Cancelled" class="btn btn-danger">
                             <i class="bi bi-x-circle me-1"></i> Hủy Đơn
                        </button>
                    }
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-transparent border-bottom">
                <h6 class="m-0 font-weight-bold text-primary">Thông Tin Khách Hàng</h6>
            </div>
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-4">
                    <div class="avatar avatar-m bg-light rounded-circle d-flex align-items-center justify-content-center me-3">
                        <i class="bi bi-person text-secondary fs-4"></i>
                    </div>
                    <div>
                        <h6 class="mb-0 fw-bold">@(Model.RecipientName ?? "Khách vãng lai")</h6>
                        <small class="text-muted">@(Model.User?.Email ?? "No Email")</small>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label class="small text-muted fw-bold text-uppercase">Số Điện Thoại</label>
                    <p class="h6 text-dark fw-bold">@Model.Phone</p>
                </div>
                 <div class="mb-3">
                    <label class="small text-muted fw-bold text-uppercase">Địa Chỉ Giao Hàng</label>
                    <p class="h6 text-dark">@Model.AddressDetail, @Model.Ward, @Model.District, @Model.Province</p>
                </div>
                
                <hr>
                
                <div class="mb-3">
                    <label class="small text-muted fw-bold text-uppercase">Phương Thức Thanh Toán</label>
                    <p class="h6 text-dark">@Model.PaymentMethod</p>
                </div>
                 <div class="mb-3">
                    <label class="small text-muted fw-bold text-uppercase">Trạng Thái</label>
                    <div class="mt-1">
                         @if(Model.Status == Fahasa.Models.OrderStatus.Pending) {
                            <span class="badge badge-phoenix badge-phoenix-warning fs-6">Chờ xử lý</span>
                        } else if (Model.Status == Fahasa.Models.OrderStatus.Processing) {
                            <span class="badge badge-phoenix badge-phoenix-info fs-6">Đang xử lý</span>
                        } else if (Model.Status == Fahasa.Models.OrderStatus.Shipping) {
                            <span class="badge badge-phoenix badge-phoenix-primary fs-6">Đang giao</span>
                        } else if (Model.Status == Fahasa.Models.OrderStatus.Delivered) {
                            <span class="badge badge-phoenix badge-phoenix-success fs-6">Hoàn thành</span>
                        } else if (Model.Status == Fahasa.Models.OrderStatus.Cancelled) {
                            <span class="badge badge-phoenix badge-phoenix-danger fs-6">Đã hủy</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
