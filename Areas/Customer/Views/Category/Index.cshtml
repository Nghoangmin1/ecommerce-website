@{
    ViewData["Title"] = "Danh mục sách";
    var categories = ViewBag.Categories as List<Fahasa.Models.Category>;
    var categoryBookCounts = ViewBag.CategoryBookCounts as Dictionary<int, int>;
    var authors = ViewBag.Authors as List<Fahasa.Models.Author>;
    var publishers = ViewBag.Publishers as List<Fahasa.Models.Publisher>;
    var books = ViewBag.Books as List<Fahasa.Models.Book>;
    var selectedCategoryId = ViewBag.SelectedCategoryId as int?;
    var selectedAuthorIds = ViewBag.SelectedAuthorIds as int[] ?? Array.Empty<int>();
    var selectedPublisherIds = ViewBag.SelectedPublisherIds as int[] ?? Array.Empty<int>();
    var priceFrom = ViewBag.PriceFrom as int?;
    var priceTo = ViewBag.PriceTo as int?;
    var search = ViewBag.Search as string ?? "";
    var sortBy = ViewBag.SortBy as string ?? "default";
    var currentPage = (int)ViewBag.CurrentPage;
    var totalPages = (int)ViewBag.TotalPages;
    var totalItems = (int)ViewBag.TotalItems;
    var dbMinPrice = (int)ViewBag.MinPrice;
    var dbMaxPrice = (int)ViewBag.MaxPrice;
    var currentMinPrice = priceFrom ?? dbMinPrice;
    var currentMaxPrice = priceTo ?? dbMaxPrice;
    var authorBookCounts = ViewBag.AuthorBookCounts as Dictionary<int, int> ?? new Dictionary<int, int>();
    var publisherBookCounts = ViewBag.PublisherBookCounts as Dictionary<int, int> ?? new Dictionary<int, int>();
}

<!-- Breadcrumb -->
<div class="bg-light py-3 mb-4 border-bottom">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-transparent p-0 m-0">
                <li class="breadcrumb-item"><a asp-area="Customer" asp-controller="Home" asp-action="Index" class="text-dark">Trang chủ</a></li>
                <li class="breadcrumb-item active text-danger" aria-current="page">Cửa hàng sách</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container mb-5">
    <div class="row">
        <!-- Sidebar Filter -->
        <div class="col-lg-3 col-md-4 mb-4">
             <!-- Search -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white font-weight-bold text-uppercase">Tìm kiếm</div>
                <div class="card-body p-3">
                    <form method="get" action="@Url.Action("Index")">
                        <!-- Maintain other params -->
                        @if (selectedCategoryId.HasValue) { <input type="hidden" name="categoryId" value="@selectedCategoryId.Value" /> }
                        @foreach (var id in selectedAuthorIds) { <input type="hidden" name="authorIds" value="@id" /> }
                        @foreach (var id in selectedPublisherIds) { <input type="hidden" name="publisherIds" value="@id" /> }
                        @if (priceFrom.HasValue) { <input type="hidden" name="priceFrom" value="@priceFrom.Value" /> }
                        @if (priceTo.HasValue) { <input type="hidden" name="priceTo" value="@priceTo.Value" /> }
                        <input type="hidden" name="sortBy" value="@sortBy" />
                        
                        <div class="input-group">
                            <input type="text" name="search" class="form-control" placeholder="Tên sách..." value="@search">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-danger"><i class="bi bi-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Categories -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white font-weight-bold text-uppercase">Danh mục</div>
                <div class="list-group list-group-flush">
                    <a href="@Url.Action("Index", new { search = search, sortBy = sortBy })" 
                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @(selectedCategoryId == null ? "text-danger font-weight-bold" : "text-dark")">
                        Tất cả sách
                        <span class="badge badge-light badge-pill text-dark border">@totalItems</span>
                    </a>
                    @if (categories != null)
                    {
                        foreach (var category in categories)
                        {
                            var bookCount = categoryBookCounts?.ContainsKey(category.Id) == true ? categoryBookCounts[category.Id] : 0;
                            <a href="@Url.Action("Index", new { categoryId = category.Id, search = search, sortBy = sortBy })" 
                               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @(selectedCategoryId == category.Id ? "text-danger font-weight-bold" : "text-dark")">
                                @category.Name
                                <span class="badge badge-light badge-pill text-dark border">@bookCount</span>
                            </a>
                        }
                    }
                </div>
            </div>

            <!-- Author Filter -->
            @if (authors != null && authors.Any())
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-white font-weight-bold text-uppercase">Tác giả</div>
                    <div class="card-body p-3" style="max-height: 200px; overflow-y: auto;">
                        <form method="get" id="filterForm" action="#">
                            <input type="hidden" name="categoryId" value="@selectedCategoryId" />
                            <input type="hidden" name="search" value="@search" />
                            <input type="hidden" name="sortBy" value="@sortBy" />
                            
                            @foreach (var author in authors)
                            {
                                var isChecked = selectedAuthorIds.Contains(author.Id);
                                <div class="custom-control custom-checkbox mb-2">
                                    <input type="checkbox" class="custom-control-input author-checkbox" id="author_@author.Id" name="authorIds" value="@author.Id" @(isChecked ? "checked" : "")>
                                    <label class="custom-control-label" for="author_@author.Id">@author.Name <small class="text-muted">(@(authorBookCounts.ContainsKey(author.Id) ? authorBookCounts[author.Id] : 0))</small></label>
                                </div>
                            }
                        </form>
                    </div>
                </div>
            }

            <!-- Price Filter -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white font-weight-bold text-uppercase">Khoảng giá</div>
                <div class="card-body p-3">
                     <form method="get" id="priceFilterForm" action="#">
                        <input type="hidden" name="categoryId" value="@selectedCategoryId" />
                        <input type="hidden" name="search" value="@search" />
                        <input type="hidden" name="sortBy" value="@sortBy" />
                         <!-- Preserve other filters -->
                        @foreach (var id in selectedAuthorIds) { <input type="hidden" name="authorIds" value="@id" /> }

                        <div class="form-group mb-2">
                            <label class="small text-muted mb-1">Từ (đ)</label>
                            <input type="number" name="priceFrom" value="@currentMinPrice" class="form-control form-control-sm" min="0" step="1000">
                        </div>
                        <div class="form-group mb-3">
                            <label class="small text-muted mb-1">Đến (đ)</label>
                            <input type="number" name="priceTo" value="@currentMaxPrice" class="form-control form-control-sm" min="0" step="1000">
                        </div>
                        <button type="submit" class="btn btn-danger btn-sm btn-block">Áp dụng</button>
                    </form>
                </div>
            </div>

        </div>

        <!-- Main Content -->
        <div class="col-lg-9 col-md-8">
            <!-- Filter Bar -->
            <div class="d-flex justify-content-between align-items-center mb-4 bg-white p-3 shadow-sm rounded">
                <span class="text-muted">Hiển thị @((currentPage - 1) * 12 + 1) - @(Math.Min(currentPage * 12, totalItems)) của @totalItems sách</span>
                <form method="get" class="form-inline m-0">
                    <input type="hidden" name="categoryId" value="@selectedCategoryId" />
                    <input type="hidden" name="search" value="@search" />
                    <label class="mr-2 small text-muted">Sắp xếp:</label>
                    <select name="sortBy" onchange="this.form.submit()" class="form-control form-control-sm border-0 bg-light" style="cursor: pointer;">
                        <option value="default" selected="@(sortBy == "default")">Mặc định</option>
                        <option value="newest" selected="@(sortBy == "newest")">Mới nhất</option>
                        <option value="popular" selected="@(sortBy == "popular")">Bán chạy</option>
                        <option value="price_asc" selected="@(sortBy == "price_asc")">Giá thấp -> cao</option>
                        <option value="price_desc" selected="@(sortBy == "price_desc")">Giá cao -> thấp</option>
                        <option value="name_asc" selected="@(sortBy == "name_asc")">Tên A-Z</option>
                    </select>
                </form>
            </div>

            <!-- Product Grid -->
            <div class="row">
                @if (books != null && books.Any())
                {
                    foreach (var book in books)
                    {
                        <div class="col-lg-4 col-md-6 col-6 mb-4">
                            <div class="card h-100 border-0 shadow-sm book-card">
                                <a asp-area="Customer" asp-controller="Category" asp-action="Details" asp-route-id="@book.Id" class="position-relative d-block overflow-hidden" style="padding-top: 140%;">
                                     <img src="@(string.IsNullOrEmpty(book.ImageUrl) ? "/customer/img/product/p1.jpg" : book.ImageUrl)" 
                                          class="card-img-top position-absolute w-100 h-100" style="top: 0; left: 0; object-fit: contain; padding: 15px;" alt="@book.Name">
                                </a>
                                <div class="card-body p-3 d-flex flex-column">
                                    <h6 class="card-title mb-1">
                                        <a asp-area="Customer" asp-controller="Category" asp-action="Details" asp-route-id="@book.Id" class="text-dark text-decoration-none book-title" title="@book.Name">
                                            @book.Name
                                        </a>
                                    </h6>
                                     <div class="mt-auto">
                                        <div class="d-flex align-items-baseline mb-2">
                                             <span class="text-danger font-weight-bold h5 mb-0">@book.Price.ToString("#,##0") đ</span>
                                             @if(book.DiscountPercent > 0)
                                            {
                                                <small class="text-muted ml-2 text-decoration-through">@( (book.Price * 1.2).ToString("#,##0") ) đ</small>
                                            }
                                        </div>
                                        <div class="d-flex">
                                             <a asp-area="Customer" asp-controller="Category" asp-action="Details" asp-route-id="@book.Id" class="btn btn-outline-secondary btn-sm flex-grow-1 mr-1">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <form method="post" asp-area="Customer" asp-controller="Cart" asp-action="AddToCart" class="flex-grow-1">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="bookId" value="@book.Id" />
                                                <input type="hidden" name="quantity" value="1" />
                                                <button type="submit" class="btn btn-danger btn-sm w-100 font-weight-bold">
                                                    <i class="bi bi-cart-plus"></i> Mua
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center py-5">
                        <i class="bi bi-emoji-frown display-1 text-muted"></i>
                        <h4 class="mt-3 text-muted">Không tìm thấy sách nào phù hợp.</h4>
                    </div>
                }
            </div>

            <!-- Pagination -->
            @if (totalPages > 1)
            {
                <nav class="mt-4">
                    <ul class="pagination justify-content-center">
                        @if (currentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link text-danger" href="@Url.Action("Index", new { categoryId = selectedCategoryId, search = search, sortBy = sortBy, page = currentPage - 1 })" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                        }
                        
                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link @(i == currentPage ? "bg-danger border-danger" : "text-danger")" href="@Url.Action("Index", new { categoryId = selectedCategoryId, search = search, sortBy = sortBy, page = i })">@i</a>
                            </li>
                        }

                        @if (currentPage < totalPages)
                        {
                            <li class="page-item">
                                <a class="page-link text-danger" href="@Url.Action("Index", new { categoryId = selectedCategoryId, search = search, sortBy = sortBy, page = currentPage + 1 })" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

<style>
    .book-title {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        height: 40px;
        font-size: 0.95rem;
    }
    .book-card:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease;
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
</style>

@section Scripts {
	<script>
		$(document).ready(function() {
			// Auto-submit checkboxes
			$('.author-checkbox, .publisher-checkbox').on('change', function() {
                var form = $(this).closest('form');
                 // If we check/uncheck, we should create a merged URL, but here simple form submit works for that specific block
                 // Ideally we want one single form for all filters, but separate forms work if we keep hidden inputs synced.
                 // In this implementation, I added hidden inputs to each form to keep state.
				form.submit();
			});

			// Price Slider
            // Requires noUiSlider to be loaded

		});
	</script>
}
