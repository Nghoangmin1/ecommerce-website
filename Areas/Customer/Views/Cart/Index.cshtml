@using Fahasa.Areas.Customer.Controllers
@{
    ViewData["Title"] = "Giỏ hàng";
    var cartItems = ViewBag.CartItems as List<CartItemViewModel> ?? new List<CartItemViewModel>();
    var totalPrice = ViewBag.TotalPrice as decimal? ?? 0;
    var totalItems = ViewBag.TotalItems as int? ?? 0;
}

<!-- Breadcrumb -->
<div class="bg-light py-3 mb-4 border-bottom">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-transparent p-0 m-0">
                <li class="breadcrumb-item"><a asp-area="Customer" asp-controller="Home" asp-action="Index" class="text-dark">Trang chủ</a></li>
                <li class="breadcrumb-item active text-danger" aria-current="page">Giỏ hàng (@totalItems sản phẩm)</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container mb-5">
    @if (cartItems == null || !cartItems.Any())
    {
        <div class="text-center py-5 bg-white shadow-sm rounded">
            <i class="bi bi-cart-x text-muted" style="font-size: 5rem;"></i>
            <h3 class="mt-3">Giỏ hàng của bạn đang trống</h3>
            <p class="text-muted">Hãy thêm sản phẩm vào giỏ hàng để tiếp tục mua sắm.</p>
            <a asp-area="Customer" asp-controller="Category" asp-action="Index" class="btn btn-danger btn-lg mt-3">Tiếp tục mua sắm</a>
        </div>
    }
    else
    {
        <div class="row">
            <!-- Cart Items -->
            <div class="col-lg-8 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white font-weight-bold">Danh sách sản phẩm</div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-borderless mb-0">
                                <thead class="border-bottom bg-light">
                                    <tr>
                                        <th scope="col" class="pl-4">Sản phẩm</th>
                                        <th scope="col" style="width: 120px;">Đơn giá</th>
                                        <th scope="col" style="width: 140px;">Số lượng</th>
                                        <th scope="col" style="width: 120px;" class="text-right pr-4">Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in cartItems)
                                    {
                                        var book = item.Book;
                                        <tr class="border-bottom">
                                            <td class="pl-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="mr-3" style="width: 80px; height: 100px; background: #f9f9f9; display: flex; align-items: center; justify-content: center; overflow: hidden; border-radius: 5px;">
                                                        @if (!string.IsNullOrEmpty(book.ImageUrl))
                                                        {
                                                            <img src="@book.ImageUrl" alt="@book.Name" style="max-height: 100%; max-width: 100%;">
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted font-weight-bold h4">@(book.Name?.FirstOrDefault())</span>
                                                        }
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-1"><a asp-area="Customer" asp-controller="Category" asp-action="Details" asp-route-id="@book.Id" class="text-dark text-decoration-none">@book.Name</a></h6>
                                                        <small class="text-muted d-block">Tác giả: @(book.Author?.Name ?? "N/A")</small>
                                                        <form method="post" asp-action="RemoveFromCart" class="mt-2">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="bookId" value="@book.Id" />
                                                            <button type="submit" class="btn btn-link text-danger p-0 small" onclick="return confirm('Bạn có chắc muốn xóa?');">Xóa</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="align-middle">
                                                <span class="font-weight-bold">@item.FinalPrice.ToString("#,##0") đ</span>
                                                @if (book.DiscountPercent > 0)
                                                {
                                                    <small class="text-muted text-decoration-through d-block">@book.Price.ToString("#,##0") đ</small>
                                                }
                                            </td>
                                            <td class="align-middle">
                                                 <div class="input-group input-group-sm" style="width: 110px;">
                                                    <div class="input-group-prepend">
                                                        <button class="btn btn-outline-secondary" type="button" onclick="updateQty(@book.Id, -1)">-</button>
                                                    </div>
                                                    <input type="text" class="form-control text-center" value="@item.Quantity" id="qty_@book.Id" readonly>
                                                    <div class="input-group-append">
                                                        <button class="btn btn-outline-secondary" type="button" onclick="updateQty(@book.Id, 1)">+</button>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="align-middle text-right pr-4 font-weight-bold text-danger">
                                                @item.TotalPrice.ToString("#,##0") đ
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                
                 <div class="mt-3">
                    <a asp-area="Customer" asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Tiếp tục mua sắm
                    </a>
                </div>
            </div>

            <!-- Summary -->
            <div class="col-lg-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white font-weight-bold">Thành tiền</div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tạm tính</span>
                            <span class="font-weight-bold">@totalPrice.ToString("#,##0") đ</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3 text-success">
                            <span>Giảm giá</span>
                            <span>0 đ</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="h5 mb-0">Tổng cộng</span>
                            <span class="h4 text-danger font-weight-bold mb-0">@totalPrice.ToString("#,##0") đ</span>
                        </div>
                        <p class="small text-muted text-right">(Đã bao gồm VAT nếu có)</p>

                        <a asp-controller="Checkout" asp-action="Index" class="btn btn-danger btn-block btn-lg font-weight-bold text-white">THANH TOÁN NGAY</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function updateQty(bookId, change) {
            var input = document.getElementById('qty_' + bookId);
            var currentVal = parseInt(input.value);
            var newVal = currentVal + change;
            
            if (newVal < 1) return; // Don't go below 1

             // Create form to submit
            var form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("UpdateQuantity", "Cart")';

            // Token
            var token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (token) {
                 var t = document.createElement('input'); t.type='hidden'; t.name='__RequestVerificationToken'; t.value=token.value; form.appendChild(t);
            }

            var idInput = document.createElement('input'); idInput.type='hidden'; idInput.name='bookId'; idInput.value=bookId; form.appendChild(idInput);
            var qtyInput = document.createElement('input'); qtyInput.type='hidden'; qtyInput.name='quantity'; qtyInput.value=newVal; form.appendChild(qtyInput);

            document.body.appendChild(form);
            form.submit();
        }
    </script>
}
