@model Fahasa.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 p-md-5">
                    <h3 class="text-center mb-4 font-weight-bold text-danger">Đăng nhập</h3>
                    
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    }

                    <form asp-action="Login" method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label control-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label control-label">Mật khẩu</label>
                            <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3 d-flex justify-content-between align-items-center">
                            <div class="custom-control custom-checkbox">
                                <input asp-for="RememberMe" class="custom-control-input" />
                                <label asp-for="RememberMe" class="custom-control-label">Ghi nhớ đăng nhập</label>
                            </div>
                            <a href="#" class="text-decoration-none text-secondary small">Quên mật khẩu?</a>
                        </div>

                        <div class="form-group mb-4">
                            <button type="submit" class="btn btn-danger btn-block font-weight-bold py-2">ĐĂNG NHẬP</button>
                        </div>

                        <div class="text-center">
                            <p class="text-muted small">Chưa có tài khoản? <a asp-action="Register" class="text-danger font-weight-bold">Đăng ký ngay</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
