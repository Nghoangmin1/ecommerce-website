@model Fahasa.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="container py-5">
    <div class="row">
        <!-- Sidebar Menu -->
        <partial name="_CustomerAccountSidebar" />

        <!-- Content -->
        <div class="col-md-9">
            <h5 class="text-uppercase font-weight-bold mb-3">Đổi mật khẩu</h5>
            
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            @TempData["Success"]
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                        </div>
                    }

                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group row">
                            <label asp-for="OldPassword" class="col-sm-4 col-form-label text-right">Mật khẩu hiện tại</label>
                            <div class="col-sm-8">
                                <input asp-for="OldPassword" class="form-control" />
                                <span asp-validation-for="OldPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="NewPassword" class="col-sm-4 col-form-label text-right">Mật khẩu mới</label>
                            <div class="col-sm-8">
                                <input asp-for="NewPassword" class="form-control" />
                                <span asp-validation-for="NewPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="ConfirmPassword" class="col-sm-4 col-form-label text-right">Xác nhận mật khẩu mới</label>
                            <div class="col-sm-8">
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="form-group row mt-4">
                            <div class="col-sm-8 offset-sm-4">
                                <button type="submit" class="btn btn-danger px-4">Đổi mật khẩu</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
