@model Fahasa.Models.ApplicationUser

@{
    ViewData["Title"] = "Thông tin tài khoản";
}

<div class="container py-5">
    <div class="row">
        <!-- Sidebar Menu -->
        <!-- Sidebar Menu -->
        <partial name="_CustomerAccountSidebar" />

        <!-- Content -->
        <div class="col-md-9">
            <h5 class="text-uppercase font-weight-bold mb-3">Thông tin tài khoản</h5>
            
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            @TempData["Success"]
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                        </div>
                    }

                    <form asp-action="UpdateProfile" method="post">
                        <div class="form-group row">
                            <label asp-for="FullName" class="col-sm-3 col-form-label text-right">Họ tên</label>
                            <div class="col-sm-9">
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="PhoneNumber" class="col-sm-3 col-form-label text-right">Số điện thoại</label>
                            <div class="col-sm-9">
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Email" class="col-sm-3 col-form-label text-right">Email</label>
                            <div class="col-sm-9">
                                <input asp-for="Email" class="form-control" disabled />
                                <small class="text-muted">Email không thể thay đổi</small>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label text-right">Ngày sinh</label>
                            <div class="col-sm-9">
                                <input asp-for="DateOfBirth" type="date" class="form-control w-50" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label text-right">Giới tính</label>
                            <div class="col-sm-9 d-flex align-items-center">
                                <div class="custom-control custom-radio mr-4">
                                    <input type="radio" id="male" name="Gender" value="1" class="custom-control-input" @(Model.Gender == 1 ? "checked" : "")>
                                    <label class="custom-control-label" for="male">Nam</label>
                                </div>
                                <div class="custom-control custom-radio mr-4">
                                    <input type="radio" id="female" name="Gender" value="2" class="custom-control-input" @(Model.Gender == 2 ? "checked" : "")>
                                    <label class="custom-control-label" for="female">Nữ</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="other" name="Gender" value="0" class="custom-control-input" @(Model.Gender == 0 ? "checked" : "")>
                                    <label class="custom-control-label" for="other">Khác</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row mt-4">
                            <div class="col-sm-9 offset-sm-3">
                                <button type="submit" class="btn btn-danger px-4">Lưu thay đổi</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
