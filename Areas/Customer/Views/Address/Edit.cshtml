@model Fahasa.Models.Address

@{
    ViewData["Title"] = "Cập nhật địa chỉ";
}

<div class="container py-5">
    <div class="row">
        <!-- Sidebar Menu -->
        <!-- Sidebar Menu -->
        <partial name="_CustomerAccountSidebar" />

        <!-- Content -->
        <div class="col-md-9">
            <h5 class="text-uppercase font-weight-bold mb-3">Cập nhật địa chỉ</h5>
            
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="UserId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group row">
                            <label asp-for="ReceiverName" class="col-sm-3 col-form-label text-right">Tên người nhận <span class="text-danger">*</span></label>
                            <div class="col-sm-9">
                                <input asp-for="ReceiverName" class="form-control" />
                                <span asp-validation-for="ReceiverName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="PhoneNumber" class="col-sm-3 col-form-label text-right">Số điện thoại <span class="text-danger">*</span></label>
                            <div class="col-sm-9">
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="City" class="col-sm-3 col-form-label text-right">Tỉnh/Thành phố <span class="text-danger">*</span></label>
                            <div class="col-sm-9">
                                <input asp-for="City" class="form-control" />
                                <span asp-validation-for="City" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="District" class="col-sm-3 col-form-label text-right">Quận/Huyện <span class="text-danger">*</span></label>
                            <div class="col-sm-9">
                                <input asp-for="District" class="form-control" />
                                <span asp-validation-for="District" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label asp-for="Ward" class="col-sm-3 col-form-label text-right">Phường/Xã <span class="text-danger">*</span></label>
                            <div class="col-sm-9">
                                <input asp-for="Ward" class="form-control" />
                                <span asp-validation-for="Ward" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="StreetAddress" class="col-sm-3 col-form-label text-right">Địa chỉ cụ thể <span class="text-danger">*</span></label>
                            <div class="col-sm-9">
                                <input asp-for="StreetAddress" class="form-control" />
                                <span asp-validation-for="StreetAddress" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-9 offset-sm-3">
                                <div class="custom-control custom-checkbox">
                                    <input asp-for="IsDefault" class="custom-control-input">
                                    <label asp-for="IsDefault" class="custom-control-label">Đặt làm địa chỉ mặc định</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row mt-4">
                            <div class="col-sm-9 offset-sm-3">
                                <a asp-action="Index" class="btn btn-outline-secondary mr-2">Hủy bỏ</a>
                                <button type="submit" class="btn btn-danger px-4">Lưu thay đổi</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
