@model Fahasa.Models.ViewModels.HomeVM
@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section (Carousel) -->
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-12">
            <div id="homeCarousel" class="carousel slide shadow-sm rounded overflow-hidden" data-ride="carousel">
                <ol class="carousel-indicators">
                    @if (Model.Featured != null && Model.Featured.Any())
                    {
                        for (int i = 0; i < Model.Featured.Count(); i++)
                        {
                            <li data-target="#homeCarousel" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                        }
                    }
                    else
                    {
                         <li data-target="#homeCarousel" data-slide-to="0" class="active"></li>
                    }
                </ol>
                <div class="carousel-inner" style="background: #fff;">
                     @if (Model.Featured != null && Model.Featured.Any())
                    {
                         int index = 0;
                        foreach (var book in Model.Featured)
                        {
                             <div class="carousel-item @(index == 0 ? "active" : "")">
                                <div class="d-flex align-items-center justify-content-center p-5 bg-white" style="height: 400px;">
                                    <div class="row w-100 align-items-center">
                                        <div class="col-md-6 text-center text-md-left pl-md-5">
                                            <span class="badge badge-danger mb-2">Sách Nổi Bật</span>
                                            <h1 class="display-4 font-weight-bold text-dark">@book.Name</h1>
                                            <p class="lead text-muted">@book.Author?.Name</p>
                                            <a asp-area="Customer" asp-controller="Category" asp-action="Details" asp-route-id="@book.Id" class="btn btn-danger btn-lg mt-3 px-4 shadow-sm">Xem Chi Tiết</a>
                                        </div>
                                        <div class="col-md-6 text-center">
                                            <img src="@(string.IsNullOrEmpty(book.ImageUrl) ? "/customer/img/banner/banner-img.png" : book.ImageUrl)" 
                                                 class="img-fluid" style="max-height: 320px;" alt="@book.Name">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            index++;
                        }
                    }
                    else
                    {
                         <!-- Fallback Slide -->
                        <div class="carousel-item active">
                            <div class="d-flex align-items-center justify-content-center p-5 bg-white" style="height: 400px;">
                                <div class="row w-100 align-items-center">
                                    <div class="col-md-6 text-center text-md-left pl-md-5">
                                        <h1 class="display-4 font-weight-bold text-dark">Karma Book</h1>
                                        <p class="lead text-muted">Thế giới sách online dành cho bạn.</p>
                                        <a asp-controller="Category" asp-action="Index" class="btn btn-danger btn-lg mt-3 px-4 shadow-sm">Mua Sắm Ngay</a>
                                    </div>
                                    <div class="col-md-6 text-center">
                                        <img src="~/customer/img/product/book_29.jpg" class="img-fluid" style="max-height: 320px;" alt="Banner">
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bestsellers -->
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
        <h3 class="font-weight-bold m-0 text-uppercase" style="color: #333;">
            <span class="border-left border-danger pl-3" style="border-width: 5px !important;">Sách Bán Chạy</span>
        </h3>
        <a asp-area="Customer" asp-controller="Category" asp-action="Index" class="text-danger font-weight-bold">Xem tất cả <i class="bi bi-chevron-right"></i></a>
    </div>

    <div class="row">
         @if (Model.Bestsellers != null && Model.Bestsellers.Any())
        {
            foreach (var book in Model.Bestsellers)
            {
                <div class="col-lg-3 col-md-4 col-6 mb-4">
                     <div class="card h-100 border-0 shadow-sm book-card">
                        <a asp-area="Customer" asp-controller="Category" asp-action="Details" asp-route-id="@book.Id" class="position-relative d-block overflow-hidden" style="padding-top: 140%;">
                             <img src="@(string.IsNullOrEmpty(book.ImageUrl) ? "/customer/img/product/p1.jpg" : book.ImageUrl)" 
                                  class="card-img-top position-absolute w-100 h-100" style="top: 0; left: 0; object-fit: contain; padding: 15px;" alt="@book.Name">
                        </a>
                        <div class="card-body p-3 d-flex flex-column">
                            <h6 class="card-title mb-1">
                                <a asp-area="Customer" asp-controller="Category" asp-action="Details" asp-route-id="@book.Id" class="text-dark text-decoration-none book-title" title="@book.Name">
                                    @book.Name
                                </a>
                            </h6>
                             <div class="mt-auto">
                                <div class="d-flex align-items-baseline mb-2">
                                     <span class="text-danger font-weight-bold h5 mb-0">@book.Price.ToString("#,##0") đ</span>
                                      @if(book.DiscountPercent > 0)
                                    {
                                         <small class="text-muted ml-2 text-decoration-through">120.000 đ</small>
                                    }
                                </div>
                                <a asp-area="Customer" asp-controller="Category" asp-action="Details" asp-route-id="@book.Id" class="btn btn-outline-danger btn-sm btn-block font-weight-bold">
                                    <i class="bi bi-cart-plus"></i> Chọn mua
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

