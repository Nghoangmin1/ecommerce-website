@model Fahasa.Models.Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<!-- Breadcrumb -->
<div class="bg-light py-3 mb-4 border-bottom">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-transparent p-0 m-0">
                <li class="breadcrumb-item"><a asp-area="Customer" asp-controller="Home" asp-action="Index" class="text-dark">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-controller="Tracking" asp-action="Index" class="text-dark">Tra cứu</a></li>
                <li class="breadcrumb-item active text-danger" aria-current="page">#@Model.OrderNumber</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="font-weight-bold mb-0">Đơn hàng #@Model.OrderNumber</h3>
        <a asp-action="Index" asp-route-phoneNumber="@Model.Phone" class="btn btn-outline-secondary btn-sm"><i class="bi bi-arrow-left"></i> Quay lại</a>
    </div>

    <div class="row">
        <!-- Info Cards -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header bg-white font-weight-bold">Thông tin đơn hàng</div>
                <div class="card-body">
                    <p class="mb-2"><strong>Ngày đặt:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                    <p class="mb-2"><strong>Tổng tiền:</strong> <span class="text-danger font-weight-bold">@Model.TotalAmount.ToString("N0") đ</span></p>
                    <p class="mb-2"><strong>Thanh toán:</strong> @Html.DisplayFor(m => m.PaymentMethod)</p>
                    <p class="mb-0"><strong>Trạng thái:</strong> 
                        @if (Model.Status == Fahasa.Models.OrderStatus.Pending) { <span class="badge badge-warning text-white">Chờ xử lý</span> }
                        else if (Model.Status == Fahasa.Models.OrderStatus.Processing) { <span class="badge badge-info">Đang xử lý</span> }
                        else if (Model.Status == Fahasa.Models.OrderStatus.Shipping) { <span class="badge badge-primary">Đang giao hàng</span> }
                        else if (Model.Status == Fahasa.Models.OrderStatus.Delivered) { <span class="badge badge-success">Hoàn thành</span> }
                        else if (Model.Status == Fahasa.Models.OrderStatus.Cancelled) { <span class="badge badge-danger">Đã hủy</span> }
                    </p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header bg-white font-weight-bold">Thông tin người nhận</div>
                <div class="card-body">
                    <p class="mb-2"><strong>Họ tên:</strong> @Model.RecipientName</p>
                    <p class="mb-2"><strong>Điện thoại:</strong> @Model.Phone</p>
                    <p class="mb-0"><strong>Email:</strong> @(Model.User?.Email ?? "Không có")</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header bg-white font-weight-bold">Địa chỉ giao hàng</div>
                <div class="card-body">
                     <p class="mb-0">@Model.AddressDetail, @Model.Ward, @Model.District, @Model.Province</p>
                     @if (!string.IsNullOrEmpty(Model.Note))
                     {
                         <hr>
                         <p class="mb-0 text-muted small"><strong>Ghi chú:</strong> @Model.Note</p>
                     }
                </div>
            </div>
        </div>
    </div>

    <!-- Order Items -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white font-weight-bold">Chi tiết sản phẩm</div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>Sản phẩm</th>
                            <th class="text-center">Số lượng</th>
                            <th class="text-right">Đơn giá</th>
                            <th class="text-right">Tổng tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.OrderItems != null)
                        {
                            foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td class="text-center">x @item.Quantity</td>
                                    <td class="text-right">@((item.TotalPrice / item.Quantity).ToString("N0")) đ</td>
                                    <td class="text-right font-weight-bold">@item.TotalPrice.ToString("N0") đ</td>
                                </tr>
                            }
                        }
                    </tbody>
                    <tfoot class="bg-light">
                         <tr>
                            <td colspan="3" class="text-right">Tạm tính:</td>
                            <td class="text-right">@Model.Subtotal.ToString("N0") đ</td>
                        </tr>
                        <tr>
                            <td colspan="3" class="text-right">Phí vận chuyển:</td>
                            <td class="text-right">@Model.ShippingFee.ToString("N0") đ</td>
                        </tr>
                         @if (Model.DiscountAmount > 0)
                        {
                            <tr>
                                <td colspan="3" class="text-right text-success">Giảm giá:</td>
                                <td class="text-right text-success">-@Model.DiscountAmount.ToString("N0") đ</td>
                            </tr>
                        }
                        <tr>
                            <td colspan="3" class="text-right font-weight-bold">Tổng tiền:</td>
                            <td class="text-right font-weight-bold text-danger h5 mb-0">@Model.TotalAmount.ToString("N0") đ</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <!-- Actions -->
    @if (Model.Status == Fahasa.Models.OrderStatus.Pending)
    {
        <div class="text-right">
            <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#cancelOrderModal">
                Hủy đơn hàng này
            </button>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="cancelOrderModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Xác nhận hủy đơn</h5>
                        <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                    </div>
                    <form asp-action="CancelOrder" method="post">
                        <div class="modal-body">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <p>Bạn chắc chắn muốn hủy đơn hàng <strong>#@Model.OrderNumber</strong>?</p>
                            <div class="form-group">
                                <textarea class="form-control" name="cancelReason" rows="3" placeholder="Lý do hủy (càng tốt)..."></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                            <button type="submit" class="btn btn-danger">Hủy Đơn</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

@if (TempData["SuccessMessage"] != null)
{
    <script>
        // Use toastr if available, or alert
        document.addEventListener('DOMContentLoaded', function() {
            if(typeof toastr !== 'undefined') toastr.success('@TempData["SuccessMessage"]');
            else alert('@TempData["SuccessMessage"]');
        });
    </script>
}
@if (TempData["ErrorMessage"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            if(typeof toastr !== 'undefined') toastr.error('@TempData["ErrorMessage"]');
            else alert('@TempData["ErrorMessage"]');
        });
    </script>
}
