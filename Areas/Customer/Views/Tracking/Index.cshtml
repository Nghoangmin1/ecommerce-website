@model IEnumerable<Fahasa.Models.Order>

@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="container py-5">
    <div class="row">
        <!-- Sidebar Menu -->
        <!-- Sidebar Menu -->
        <partial name="_CustomerAccountSidebar" />

        <!-- Content -->
        <div class="col-md-9">
            <h5 class="text-uppercase font-weight-bold mb-3">Đơn hàng của tôi</h5>
            
            @if (!Model.Any())
            {
                <div class="text-center py-5 bg-white shadow-sm rounded">
                    <i class="bi bi-cart-x text-muted" style="font-size: 3rem;"></i>
                    <p class="mt-3 mb-0">Bạn chưa có đơn hàng nào.</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-danger mt-3">Mua sắm ngay</a>
                </div>
            }
            else
            {
                <div class="card shadow-sm border-0">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th>Mã đơn</th>
                                        <th>Ngày đặt</th>
                                        <th>Sản phẩm</th>
                                        <th>Tổng tiền</th>
                                        <th>Trạng thái</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model)
                                    {
                                        <tr>
                                            <td class="font-weight-bold">#@order.OrderNumber</td>
                                            <td>@order.CreatedAt.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <small class="text-muted">
                                                    @if (order.OrderItems != null && order.OrderItems.Any())
                                                    {
                                                        @order.OrderItems.Count() @:sản phẩm
                                                    }
                                                    else 
                                                    {
                                                        @:0 sản phẩm
                                                    }
                                                </small>
                                            </td>
                                            <td class="text-danger font-weight-bold">@order.TotalAmount.ToString("N0") đ</td>
                                            <td>
                                                @if (order.Status == Fahasa.Models.OrderStatus.Pending) { <span class="badge badge-warning text-white">Chờ xử lý</span> }
                                                else if (order.Status == Fahasa.Models.OrderStatus.Processing) { <span class="badge badge-info">Đang xử lý</span> }
                                                else if (order.Status == Fahasa.Models.OrderStatus.Shipping) { <span class="badge badge-primary">Đang giao</span> }
                                                else if (order.Status == Fahasa.Models.OrderStatus.Delivered) { <span class="badge badge-success">Hoàn thành</span> }
                                                else if (order.Status == Fahasa.Models.OrderStatus.Cancelled) { <span class="badge badge-danger">Đã hủy</span> }
                                                else { <span class="badge badge-secondary">@order.Status</span> }
                                            </td>
                                            <td class="text-right">
                                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-danger">Chi tiết</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>